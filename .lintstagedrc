{
  "src/**/*.{js,jsx,ts,tsx,json}": [
    "pnpm eslint --max-warnings=0 --fix",
    "pnpm prettier --single-quote --write"
  ],
  "src/**/*.{jsx, tsx}": ["pnpm i18n"],
  "theme/**/*.{css,less,scss}": ["pnpm stylelint --fix"],
  "src/**/*.{css,less,scss}": ["pnpm stylelint --fix"],
  "theme/**/*.overrides": ["pnpm stylelint --fix"],
  "src/**/*.overrides": ["pnpm stylelint --fix"]
}
