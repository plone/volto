{
  "name": "@plone/scripts",
  "description": "Volto Core scripts package - Contains scripts and dependencies for these scripts for tooling when developing Plone 6 / Volto",
  "maintainers": [
    {
      "name": "Plone Foundation",
      "email": "plone-developers@lists.sourceforge.net",
      "url": "http://plone.org"
    }
  ],
  "license": "MIT",
  "version": "2.1.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:plone/volto.git"
  },
  "bugs": {
    "url": "https://github.com/plone/volto/issues",
    "email": "plone-developers@lists.sourceforge.net"
  },
  "type": "module",
  "homepage": "https://plone.org",
  "keywords": [
    "volto",
    "plone",
    "plone6",
    "react",
    "cms"
  ],
  "scripts": {
    "dry-release": "release-it --dry-run",
    "release": "release-it",
    "release-major-alpha": "release-it major --preRelease=alpha",
    "release-alpha": "release-it --preRelease=alpha"
  },
  "bin": {
    "i18n": "./i18n.cjs",
    "changelogupdater": "./changelogupdater.cjs",
    "addon": "./addon/index.js"
  },
  "release-it": {
    "hooks": {
      "after:bump": "node ./changelogupdater.cjs bump ${version}",
      "after:release": "node ./changelogupdater.cjs back ${version} && git commit -am 'Back to development (@plone/scripts)' && git push"
    },
    "git": {
      "changelog": "node ./changelogupdater.cjs excerpt",
      "requireUpstream": false,
      "requireCleanWorkingDir": false,
      "commitMessage": "Release @plone/scripts ${version}",
      "tagName": "plone-scripts-${version}",
      "tagAnnotation": "Release @plone/scripts ${version}"
    },
    "github": {
      "release": true,
      "releaseName": "@plone/scripts ${version}",
      "releaseNotes": "node ./changelogupdater.cjs excerpt"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "babel-plugin-react-intl": "5.1.17",
    "babel-preset-razzle": "4.2.17",
    "commander": "8.2.0",
    "fs-extra": "10.1.0",
    "git-url-parse": "^11.6.0",
    "mrs-developer": "*",
    "pofile": "1.0.10",
    "simple-git": "3.5.0"
  },
  "devDependencies": {
    "release-it": "14.2.1"
  }
}
