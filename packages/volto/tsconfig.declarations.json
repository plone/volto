{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "preserveSymlinks": true,
    "downlevelIteration": true,
    "paths": {
      "@plone/volto/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.tsx"]
}
