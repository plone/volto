{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "preserveSymlinks": true,
    "paths": {
      "@plone/volto/*": ["./src/*"],
    }
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.tsx"],
}
