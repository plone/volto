{
  "extends": "tsconfig/react-library.json",
  "include": ["**/*.ts", "**/*.tsx", "../components/src/icons.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "public",
    "coverage",
    "src/**/*.test.{js,jsx,ts,tsx}",
    "src/**/*.spec.{js,jsx,ts,tsx}",
    "src/**/*.stories.{js,jsx,ts,tsx}"
  ],
  "compilerOptions": {
    "types": ["vite/client"],
    "paths": {
      "seven/*": ["../../apps/seven/*"],
      "@plone/plate/*": ["./*"],
      "@plone/volto-slate/*": ["./node_modules/@plone/volto-slate/src/*"],
      "@plone/volto/*": ["../../../node_modules/@plone/volto/src/*"],
      "@root/*": ["../../../node_modules/@plone/volto/src/*"],
      "@/*": ["./*"]
    }
  }
}
